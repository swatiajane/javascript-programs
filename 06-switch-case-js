        case 2:
            console.log("Tuesday");
            break;
        case 3:
            console.log("Wed");
          
        case 4:
            console.log("Thursday");
        
        case 5:
            console.log("Friday");
            break;
        case 6:
            console.log("Sat");
            break;
        case 7:
            console.log("Sunday");
            break;
        default:
            console.log(`Invalid Input ${dayNum}`);
            break;
    }
}

